[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	excludesfile = ~/.git-global-ignore
[branch]
	autosetuprebase = always
[include]
	path = .local/gitconfig
[github]
	user = trombonehero
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[merge]
	conflictstyle = diff3
